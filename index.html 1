    }
    h2 { text-align: center; margin-bottom: 1rem; }
    textarea {
      width: 100%;
      height: 120px;
      padding: 0.5rem;
      border: 1px solid #ccc;
      border-radius: 4px;
      resize: vertical;
      margin-bottom: 1rem;
    }
    #controls {
      display: flex;
      gap: 1rem;
      margin-bottom: 1rem;
    }
    #controls label {
      flex: 1;
      font-size: 0.9rem;
      display: flex;
      flex-direction: column;
    }
    input[type="range"] {
      width: 100%;
      margin-top: 0.4rem;
    }
    #buttons {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      justify-content: center;
      margin-bottom: 1rem;
    }
    button {
      padding: 0.5rem 1rem;
